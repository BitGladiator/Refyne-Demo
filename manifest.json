{
  "manifest_version": 3,
  "name": "Refyne",
  "version": "1.0",
  "description": "AI-powered writing assistant using local Ollama",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pen.png",
      "48": "icons/pen.png",
      "128": "icons/pen.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/pen.png",
    "48": "icons/pen.png",
    "128": "icons/pen.png"
  }
}